{
  "name": "song2stream",
  "version": "0.0.1",
  "description": "This is a tool to help streamers to overlay their currently playing Spotify song into the stream for viewers to see.",
  "main": "main.js",
  "scripts": {
    "start": "electron main",
    "package": "mkdir packages && cd packages && electron-packager .. --all",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "com.bobbylaporte.song2stream",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "iconUrl": "windowsIcon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bobbylaporte/song2stream.git"
  },
  "author": "Bobby LaPorte",
  "license": "MIT",
  "homepage": "https://github.com/bobbylaporte/song2stream#readme",
  "dependencies": {
    "@jonny/spotify-web-helper": "^1.6.0",
    "bcryptjs": "^2.3.0",
    "body-parser": "^1.15.2",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "electron-log": "^1.2.2",
    "express": "^4.14.0",
    "express-handlebars": "^3.0.0",
    "express-session": "^1.14.0",
    "jade": "^1.11.0",
    "lodash": "^4.17.4",
    "morgan": "^1.7.0",
    "open": "0.0.5",
    "passport": "^0.3.2",
    "passport-spotify": "^0.3.0",
    "passport-twitch": "^1.0.3",
    "socket.io": "^1.7.1",
    "spotify-local-control": "^1.0.0",
    "spotify-port-scanner-node": "^1.0.3",
    "tmi.js": "^1.1.2",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "bower-webpack-plugin": "^0.1.9",
    "browser-sync": "^2.18.6",
    "electron": "^1.4.10",
    "electron-installer-windows": "^0.2.0",
    "electron-packager": "^8.4.0",
    "electron-winstaller": "^2.5.0",
    "gulp": "^3.9.1",
    "gulp-jshint": "^2.0.1",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^2.3.2",
    "gulp-uglify": "^2.0.0",
    "gulp-webpack": "^1.5.0",
    "jshint": "^2.9.2",
    "jshint-stylish": "^2.2.0",
    "morgan": "^1.7.0",
    "webpack": "^1.13.1"
  },
  "postinstall": "install-app-deps"
}
